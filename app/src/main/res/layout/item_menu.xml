<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:orientation="horizontal"
        android:padding="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:id="@+id/textMenuSeq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textMenuCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textItemMenu"
            android:layout_width="170dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/btnItemMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            app:srcCompat="@drawable/icons8_minus_30" />

        <EditText
            android:id="@+id/textItemCount"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="12sp"
            android:hint="0"/>

        <ImageButton
            android:id="@+id/btnItemPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            app:srcCompat="@drawable/icons8_add_30" />

    </LinearLayout>
</android.support.v7.widget.CardView>